<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="12.0" DefaultTargets="Test" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

	<PropertyGroup>
		<IncludedStuff>$(MSBuildProjectDirectory)\**\*.cs</IncludedStuff>
	</PropertyGroup>

	<ItemGroup>
		<Stuff Include="$(IncludedStuff)" />
	</ItemGroup>
	
	<Target Name="Test">
		<Message Importance="high" Text="Included stuff: @(Stuff -> Count())" />
	</Target>

</Project>